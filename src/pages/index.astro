---
import Mail from "examples/mail.astro";
import Main from "layouts/main.astro";
import { Image } from "astro:assets";
import Announcement from "layouts/partials/announcement.astro";

const doc = {
  title:
    "HTML-first, framework-agnostic implementation of shadcn/ui - franken/ui",
  meta: {
    description:
      "HTML-first, framework-agnostic, beautifully designed components that you can truly copy and paste into your site.",
  },
};

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/examples/screenshots/*.{jpeg,jpg,png,gif}",
);
const image = (await images["/src/examples/screenshots/mail-light.png"]())
  .default;
---

<Main doc={doc}>
  <main class="container">
    <div class="mx-auto max-w-7xl">
      <div
        class="mx-auto flex max-w-[980px] flex-col items-center gap-2 py-8 md:py-12 md:pb-8 lg:py-24 lg:pb-20"
      >
        <Announcement />
        <h1
          class="text-center text-3xl font-bold leading-tight tracking-tighter md:text-5xl lg:leading-[1.1]"
        >
          Franken UI
        </h1>
        <span
          class="max-w-[750px] text-center text-lg font-light text-foreground"
          style="display: inline-block; vertical-align: top; text-decoration: inherit; max-width: 568px;"
          >HTML-first, framework-agnostic, beautifully designed components that
          you can truly copy and paste into your site. Accessible. Customizable.
          Open Source.</span
        >
        <div
          class="flex w-full items-center justify-center space-x-4 py-4 md:pb-10"
        >
          <a class="uk-button uk-button-primary" href="/docs/introduction">
            Get Started
          </a>
          <a
            class="uk-button uk-button-default gap-x-2"
            href="https://github.com/sveltecult/franken-ui"
            target="_blank"
          >
            <span uk-icon="ratio: 0.8; icon: github"></span>
            Github
          </a>
        </div>
      </div>
    </div>

    <div class="overflow-hidden">
      <ul
        class="uk-subnav uk-subnav-secondary -mb-10 flex-nowrap overflow-auto pb-10"
      >
        <li class="uk-active">
          <a class="h-7" href="/examples/mail">Mail</a>
        </li>
        <li>
          <a class="h-7" href="/examples/dashboard">Dashboard</a>
        </li>
        <li>
          <a class="h-7" href="/examples/cards">Cards</a>
        </li>
        <li>
          <a class="h-7" href="/examples/tasks">Tasks</a>
        </li>
        <li>
          <a class="h-7" href="/examples/playground">Playground</a>
        </li>
        <li>
          <a class="h-7" href="/examples/forms">Forms</a>
        </li>
        <li>
          <a class="h-7" href="/examples/music">Music</a>
        </li>
        <li>
          <a class="h-7" href="/examples/authentication">Authentication</a>
        </li>
      </ul>
    </div>

    <div class="mt-4 overflow-hidden rounded-lg border border-border shadow-lg">
      <div class="hidden md:block">
        <Mail />
      </div>

      <div class="md:hidden">
        <div class="dark:hidden" uk-lightbox>
          <a
            href="/images/screenshots/mail-light.png"
            data-caption="Demo of Mail in light mode using Franken UI components"
          >
            <Image
              alt="Demo of Mail in light mode using Franken UI components"
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
              src={images["/src/examples/screenshots/mail-light.png"]()}
              widths={[240, 540, 720, image.width]}
            />
          </a>
        </div>

        <div class="hidden dark:block" uk-lightbox>
          <a
            href="/images/screenshots/mail-dark.png"
            data-caption="Demo of Mail in dark mode using Franken UI components"
          >
            <Image
              alt="Demo of Mail in dark mode using Franken UI components"
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
              src={images["/src/examples/screenshots/mail-dark.png"]()}
              widths={[240, 540, 720, image.width]}
            />
          </a>
        </div>
      </div>
    </div>
  </main>
</Main>
