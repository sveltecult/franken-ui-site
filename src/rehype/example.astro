---
import loader from "./loader";

const { component, index } = Astro.props;

const example = await loader(component);
---

{
  example ? (
    <div class="uk-margin-medium relative">
      <ul class="uk-tab" uk-tab="swiping: false">
        <li class="uk-active">
          <a href="#">Preview</a>
        </li>
        <li>
          <a href="#">Markup</a>
        </li>
      </ul>

      <a class="copy" uk-tooltip="Copy to Clipboard" role="button">
        <span class="sr-only">Copy to clipboard</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-clipboard-list"
        >
          <rect width="8" height="4" x="8" y="2" rx="1" ry="1" />
          <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" />
          <path d="M12 11h4" />
          <path d="M12 16h4" />
          <path d="M8 11h.01" />
          <path d="M8 16h.01" />
        </svg>
      </a>

      <ul class="uk-margin uk-switcher">
        <li class="uk-active">
          <Fragment set:html={example[index].preview} />
        </li>
        <li class="uk-overflow-hidden">
          <Fragment set:html={example[index].markup} />
        </li>
      </ul>
    </div>
  ) : (
    ""
  )
}
